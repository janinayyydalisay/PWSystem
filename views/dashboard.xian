      function hideModal() { 
        const modal = document.getElementById('modal');
        modal.classList.add('opacity-0');
        document.body.style.overflow = ''; // Restore background scrolling
        
        setTimeout(() => {
          modal.classList.add('hidden');
          modal.classList.remove('opacity-0');
          // Reset form to initial state if needed
          const form = document.getElementById('plant-form');
          if (form) {
            form.reset();
          }
          // Clear any remaining file selection
          const fileInput = document.getElementById('plant-image');
          if (fileInput) {
            fileInput.value = '';
          }
        }, 200);
      }

      // Close modal with escape key
      document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape' && !modal.classList.contains('hidden')) {
          hideModal();
        }
      });

      // Close modal when clicking outside
      modal.addEventListener('click', (e) => {
        if (e.target === modal) {
          hideModal();
        }
      });

      // Add event listener for the close button
      document.getElementById('btn-close-modal')?.addEventListener('click', hideModal);

      btnAdd.addEventListener('click', () => showModal('add'));
      btnCancel.addEventListener('click', hideModal);

      plantForm.addEventListener('submit', async (e) => {
        e.preventDefault();
        const id = document.getElementById('plant-id').value;
        const formData = new FormData();
        const plantName = document.getElementById('plant-name').value;
        formData.append('name', plantName);
        formData.append('description', document.getElementById('plant-description').value);
        formData.append('mode', document.getElementById('plant-mode').value);
        formData.append('status', document.getElementById('plant-status').value);
        
        if (currentImage) {
          formData.append('image', currentImage);
        }

        // Show loading notification
        const loadingNotification = showNotification(
          'loading',
          id ? 'Updating Plant...' : 'Creating Plant...',
          'Please wait while we save your changes...'
        );

        try {
          if (id) {
            // update
            const res = await fetch(`${apiBase}/${id}`, { method: 'PUT', body: formData });
            if (!res.ok) throw new Error('Update failed');
            loadingNotification.remove();
            showNotification(
              'success',
              'Plant Updated',
              `Successfully updated plant "${plantName}"`,
              6000
            );
          } else {
            const res = await fetch(apiBase, { method: 'POST', body: formData });
            if (!res.ok) throw new Error('Create failed');
            loadingNotification.remove();
            showNotification(
              'success',
              'Plant Created',
              `Successfully created new plant "${plantName}"`,
              6000
            );
          }
          hideModal();
          loadPlants();
        } catch (err) {
          loadingNotification.remove();
          showNotification(
            'error',
            'Operation Failed',
            err.message || 'Failed to save plant data. Please try again.',
            8000
          );
        }
      });

      function showNotification(type, title, message, duration = 5000) {
        // Remove existing notification if any
        const existingNotification = document.querySelector('.notification');
        if (existingNotification) {
          existingNotification.remove();
        }

        // Get icon based on type
        const getIcon = () => {
          switch(type) {
            case 'success':
              return `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>`;
            case 'error':
              return `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>`;
            case 'loading':
              return '<div class="loading-spinner"></div>';
            default:
              return '';
          }
        };

        // Create notification element
        const notification = document.createElement('div');
        notification.className = `notification ${type}`;
        notification.innerHTML = `
          <div class="flex items-center gap-4 relative z-10">
            <div class="flex-shrink-0">
              ${getIcon()}
            </div>
            <div class="flex-1 min-w-0">
              <p class="font-medium text-base">${title}</p>
              <p class="text-sm opacity-90 mt-0.5 truncate">${message}</p>
            </div>
            ${type !== 'loading' ? `
              <button onclick="this.parentElement.parentElement.remove()" 
                      class="flex-shrink-0 ml-2 p-1.5 rounded-lg hover:bg-black/10 transition-colors duration-200">
                <svg class="w-4 h-4 opacity-75 hover:opacity-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            ` : ''}
          </div>
          <div class="progress-line" ${type !== 'loading' ? `style="animation-duration: ${duration}ms"` : ''}></div>
        `;

        // Add to document
        document.body.appendChild(notification);

        // Auto remove after duration (except for loading notifications)
        if (type !== 'loading') {
          setTimeout(() => {
            notification.style.animation = 'slideOut 0.4s cubic-bezier(0.16, 1, 0.3, 1) forwards';
            setTimeout(() => notification.remove(), 400);
          }, duration);
        }

        return notification;
      }

