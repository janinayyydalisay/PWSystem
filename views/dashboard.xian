      <!-- Enhanced Modern Modal -->
      <div id="modal" class="fixed inset-0 z-50 hidden">
        <!-- Backdrop with enhanced blur effect -->
        <div class="fixed inset-0 bg-black/60 backdrop-blur-xl transition-opacity"></div>
        
        <!-- Modal Container with Fixed Height -->
        <div class="fixed inset-0 overflow-hidden">
          <div class="flex min-h-full items-center justify-center">
            <!-- Modal panel with modern design -->
            <div class="relative w-full max-w-4xl h-[calc(100vh-6rem)] transform rounded-2xl bg-gradient-to-b from-gray-900/95 to-gray-800/95 
                        shadow-2xl transition-all border border-white/10 backdrop-blur-sm flex flex-col m-3">
              <!-- Decorative elements -->
              <div class="absolute inset-0 overflow-hidden pointer-events-none">
                <div class="absolute inset-0 bg-grid-white/[0.02]"></div>
                <div class="absolute -top-48 -right-48 w-96 h-96 bg-sky-500/30 rounded-full blur-3xl"></div>
