                  </svg>
                  Delete Plant
                </button>
              </div>
            </div>
          </div>
        `;

        document.body.appendChild(modal);
        requestAnimationFrame(() => {
          modal.style.opacity = '1';
          modal.querySelector('.delete-modal-content').style.opacity = '1';
          modal.querySelector('.delete-modal-content').style.transform = 'scale(1)';
        });

        // Close on backdrop click
        modal.addEventListener('click', (e) => {
          if (e.target === modal) {
            closeDeleteModal(modal);
          }
        });

        // Close on ESC key
        const escHandler = (e) => {
          if (e.key === 'Escape') {
            closeDeleteModal(modal);
            document.removeEventListener('keydown', escHandler);
          }
        };
        document.addEventListener('keydown', escHandler);

        // Handle confirm click
        modal.querySelector('#confirm-delete').addEventListener('click', () => {
          closeDeleteModal(modal);
          onConfirm();
        });
      }

      function closeDeleteModal(modal) {
        modal.style.opacity = '0';
        modal.querySelector('.delete-modal-content').style.opacity = '0';
        modal.querySelector('.delete-modal-content').style.transform = 'scale(0.95)';
        setTimeout(() => modal.remove(), 300);
      }

