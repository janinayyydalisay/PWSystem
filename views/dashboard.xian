    </main>

    <script>
      // Initialize tooltips
      tippy('[data-tippy-content]', {
        theme: document.body.dataset.theme === 'dark' ? 'dark' : 'light',
        animation: 'shift-away'
      });

      // Theme Toggle Functionality
      const themeToggle = document.getElementById('theme-toggle');
      
      // Function to update modal theme based on current theme
      function updateModalTheme(isDark) {
        const modalPanel = document.querySelector('#modal .relative.w-full');
        if (!modalPanel) return;

        // Update modal background and border
        if (isDark) {
          modalPanel.className = 'relative w-full max-w-4xl transform rounded-xl bg-gradient-to-b from-gray-900 to-gray-800 shadow-2xl transition-all border border-white/10';
        } else {
          modalPanel.className = 'relative w-full max-w-4xl transform rounded-xl bg-white shadow-2xl transition-all border border-gray-200';
        }

        // Update text colors
        const modalTexts = modalPanel.querySelectorAll('.theme-text');
        modalTexts.forEach(el => {
          el.classList.toggle('text-gray-900', !isDark);
          el.classList.toggle('text-white', isDark);
        });

        // Update form elements
        const inputs = modalPanel.querySelectorAll('input, select, textarea');
        inputs.forEach(input => {
          if (isDark) {
            input.className = 'w-full bg-gray-900/40 border border-white/10 rounded-lg px-4 py-2.5 text-white placeholder-gray-500 focus:border-sky-500/50 focus:ring-1 focus:ring-sky-500/50';
          } else {
            input.className = 'w-full bg-white border border-gray-200 rounded-lg px-4 py-2.5 text-gray-900 placeholder-gray-500 focus:border-sky-500 focus:ring-1 focus:ring-sky-500';
          }
        });

        // Update modal header
        const modalHeader = modalPanel.querySelector('.border-b');
        if (modalHeader) {
          modalHeader.className = isDark ? 'border-b border-white/10' : 'border-b border-gray-200';
        }

        // Update buttons
        const buttons = modalPanel.querySelectorAll('button:not([type="submit"])');
        buttons.forEach(button => {
          if (button.id === 'btn-close-modal') {
            button.className = isDark 
              ? 'rounded-xl bg-white/5 p-2.5 text-gray-400 hover:bg-white/10 hover:text-white transition-all duration-200 border border-white/10 hover:border-white/20 focus:outline-none focus:ring-2 focus:ring-sky-500/50'
              : 'rounded-xl bg-gray-100 p-2.5 text-gray-500 hover:bg-gray-200 hover:text-gray-700 transition-all duration-200 border border-gray-200 hover:border-gray-300 focus:outline-none focus:ring-2 focus:ring-sky-500/50';
          } else if (button.id === 'btn-cancel') {
            button.className = isDark
              ? 'px-4 py-2 bg-white/5 hover:bg-white/10 text-white rounded-lg transition-colors duration-200'
              : 'px-4 py-2 bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-lg transition-colors duration-200';
          }
        });
      }

      function setTheme(isDark) {
        document.body.dataset.theme = isDark ? 'dark' : 'light';
        localStorage.setItem('theme', isDark ? 'dark' : 'light');
        
        // Update tooltip theme
        tippy.setDefaultProps({ theme: isDark ? 'dark' : 'light' });
        
        // Update modal theme if modal is open
        updateModalTheme(isDark);
      }

      // Initialize theme
      const savedTheme = localStorage.getItem('theme') || 'light';
      setTheme(savedTheme === 'dark');

      // Theme toggle handler
      themeToggle.addEventListener('click', () => {
        const isDark = document.body.dataset.theme === 'dark';
        setTheme(!isDark);
      });

      // Listen for theme changes from other pages
      window.addEventListener('storage', (event) => {
        if (event.key === 'theme') {
          const isDark = event.newValue === 'dark';
          setTheme(isDark);
          // Re-render any open modals with the new theme
          if (!modal.classList.contains('hidden')) {
            updateModalTheme(isDark);
          }
        }
      });

      // Set year in footer
      const yearEl = document.getElementById('year');
      if (yearEl) yearEl.textContent = new Date().getFullYear();

      // Plants CRUD client
      const apiBase = '/api/plants';
      const btnAdd = document.getElementById('btn-add');
      const modal = document.getElementById('modal');
      const btnCancel = document.getElementById('btn-cancel');
      const plantForm = document.getElementById('plant-form');
      const tbody = document.getElementById('plants-tbody');
      
      // Pagination and Search Elements
      const searchInput = document.getElementById('search-input');
      const pageSize = document.getElementById('page-size');
      const currentPageEl = document.getElementById('current-page');
      const totalPagesEl = document.getElementById('total-pages');
      const prevPageBtn = document.getElementById('prev-page');
      const nextPageBtn = document.getElementById('next-page');

      // Pagination State
      let currentPage = 1;
      let totalPages = 1;
      let searchTerm = '';
      let debounceTimeout;
      let currentImage = null;

      // Image Upload Handler
      function updateImagePreview(file) {
        const preview = document.getElementById('plant-image-preview');
        const placeholder = document.getElementById('plant-image-placeholder');
        const removeBtn = document.getElementById('btn-remove-image');
        
        if (file) {
          const reader = new FileReader();
          reader.onload = (e) => {
            preview.src = e.target.result;
            preview.style.opacity = '1';
            placeholder.style.display = 'none';
            removeBtn.classList.remove('hidden');
            currentImage = file;
          };
          reader.readAsDataURL(file);
        } else {
          preview.src = '/images/default-plant.png';
          preview.style.opacity = '0.5';
          placeholder.style.display = 'flex';
          removeBtn.classList.add('hidden');
          currentImage = null;
        }
      }

      document.getElementById('btn-upload-image').addEventListener('click', () => {
        document.getElementById('plant-image').click();
      });

      document.getElementById('btn-remove-image').addEventListener('click', () => {
        updateImagePreview(null);
      });

      document.getElementById('plant-image').addEventListener('change', (e) => {
        const file = e.target.files[0];
        if (file) {
          if (file.size > 5 * 1024 * 1024) { // 5MB limit
            alert('Image size should be less than 5MB');
            return;
          }
          if (!file.type.match('image.*')) {
            alert('Please select an image file');
            return;
          }
          updateImagePreview(file);
        }
      });

      // Enhanced Search Handler with Results Counter
      const searchResults = document.getElementById('search-results');
      const searchSpinner = document.getElementById('search-spinner');
      const searchIcon = document.getElementById('search-icon');
      
      function updateSearchResults(count) {
        const resultsIcon = document.getElementById('results-icon');
        const resultsText = document.getElementById('results-text');
        const searchResults = document.getElementById('search-results');
        
        if (!searchTerm) {
          searchResults.classList.add('hidden');
          return;
        }

        // Hide first to trigger animation
        searchResults.classList.add('hidden');
        
        // Force repaint to trigger animation
        void searchResults.offsetWidth;
        
        // Show results counter with animation
        searchResults.classList.remove('hidden');
        
        // Update icon and text based on results
        if (count === 0) {
          resultsIcon.innerHTML = `
            <svg class="w-5 h-5 text-red-400 drop-shadow-[0_0_8px_rgba(248,113,113,0.5)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>`;
          resultsText.innerHTML = `No matches found for "<span class="text-red-400 font-medium drop-shadow-[0_0_8px_rgba(248,113,113,0.3)]">${searchTerm}</span>"`;
        } else {
          resultsIcon.innerHTML = `
            <svg class="w-5 h-5 text-emerald-400 drop-shadow-[0_0_8px_rgba(52,211,153,0.5)]" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
                    d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>`;
          resultsText.innerHTML = `Found <span class="text-emerald-400 font-semibold drop-shadow-[0_0_8px_rgba(52,211,153,0.3)]">${count}</span> ${count === 1 ? 'match' : 'matches'} for "<span class="text-sky-400 font-medium drop-shadow-[0_0_8px_rgba(56,189,248,0.3)]">${searchTerm}</span>"`;
        }
      }

      searchInput.addEventListener('input', (e) => {
        clearTimeout(debounceTimeout);
        
        // Show loading state immediately
        if (e.target.value) {
          searchSpinner.classList.remove('hidden');
          searchIcon.classList.add('hidden');
        } else {
          searchSpinner.classList.add('hidden');
          searchIcon.classList.remove('hidden');
          searchResults.classList.add('hidden');
        }
        
        debounceTimeout = setTimeout(() => {
          searchTerm = e.target.value;
          currentPage = 1;
          loadPlants();
        }, 300);
      });

      // Pagination Handlers
      pageSize.addEventListener('change', () => {
        currentPage = 1;
        loadPlants();
      });

      prevPageBtn.addEventListener('click', () => {
        if (currentPage > 1) {
          currentPage--;
          loadPlants();
        }
      });

      nextPageBtn.addEventListener('click', () => {
        if (currentPage < totalPages) {
          currentPage++;
          loadPlants();
        }
      });

      function updatePaginationUI(total) {
        const limit = parseInt(pageSize.value);
        totalPages = Math.ceil(total / limit);
        currentPageEl.textContent = currentPage;
        totalPagesEl.textContent = totalPages;
        
        prevPageBtn.disabled = currentPage <= 1;
        nextPageBtn.disabled = currentPage >= totalPages;
      }

      function showModal(mode = 'add', plant = null) {
        modal.classList.remove('hidden');
        document.body.style.overflow = 'hidden'; // Prevent background scrolling
        
        const form = document.getElementById('plant-form');
        const isDark = document.body.dataset.theme === 'dark';
        
        // Apply current theme to modal
        updateModalTheme(isDark);

        // Different handling for view vs edit modes
        if (mode === 'view' && plant) {
          // View mode - read only display
          document.querySelector('#modal-title .text-xl').textContent = 'Plant Details';
          document.querySelector('#modal-title .text-sm').textContent = 'View Information';
          document.getElementById('btn-close-modal').style.display = 'block';

          // Create view-only display
          form.innerHTML = `
            <div class="space-y-6">
              <!-- Plant Image and Basic Info -->
              <div class="bg-gray-900/40 backdrop-blur-sm rounded-xl border border-white/10 p-6">
                <div class="grid grid-cols-[300px,1fr] gap-8">
                  <!-- Left: Plant Image -->
                  <div class="relative group">
                    <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-sky-500/20 to-emerald-500/20 group-hover:from-sky-500/30 group-hover:to-emerald-500/30 transition-all duration-300"></div>
                    <img src="${plant.image || '/images/default-plant.png'}" 
                         alt="${escapeHtml(plant.name)}" 
                         class="relative w-full h-[300px] object-cover rounded-xl transition-transform duration-500 group-hover:scale-105"
                         onerror="this.src='/images/default-plant.png'; this.onerror=null;">
                  </div>

                  <!-- Right: Basic Info -->
                  <div class="space-y-4">
                    <div>
                      <label class="block text-sm font-medium text-gray-400">Plant Name</label>
                      <h2 class="mt-1 text-2xl font-semibold text-white">${escapeHtml(plant.name)}</h2>
                    </div>

