                  <button type="button" id="btn-close-modal" 
                          class="group relative rounded-xl bg-white/5 p-2.5 transition-all duration-300">
                    <div class="absolute inset-0 rounded-xl bg-gradient-to-br from-red-500/20 to-red-600/20 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                    <svg class="relative w-5 h-5 text-gray-400 group-hover:text-red-400 transition-colors duration-300" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                    </svg>
                  </button>
