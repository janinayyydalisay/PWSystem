            <!-- Form container with scrolling content -->
            <form id="plant-form" class="relative flex-1 overflow-y-auto p-6 space-y-4" enctype="multipart/form-data">
              <input type="hidden" id="plant-id" />
              
              <!-- Image Upload Section -->
              <div class="mb-8">
                <label class="block text-sm font-medium mb-3 text-gray-300">Plant Image</label>
                <div class="flex items-start space-x-6">
                  <div class="relative group">
                    <div class="absolute -inset-2 bg-gradient-to-r from-sky-500/20 to-emerald-500/20 rounded-2xl blur opacity-0 group-hover:opacity-100 transition duration-300"></div>
                    <div class="relative w-40 h-40 rounded-xl border-2 border-dashed border-white/20 flex items-center justify-center overflow-hidden bg-gray-900/50 backdrop-blur-sm group-hover:border-white/30 transition duration-300">
                      <img id="plant-image-preview" src="/images/default-plant.png" alt="Plant Image Preview" 
                           class="absolute inset-0 w-full h-full object-cover transition-transform duration-500 group-hover:scale-110">
                      <div id="plant-image-placeholder" class="absolute inset-0 flex flex-col items-center justify-center bg-gray-900/80 backdrop-blur-sm transition-opacity duration-300">
                        <svg class="w-12 h-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                        </svg>
                        <p class="mt-3 text-sm text-gray-400">No image selected</p>
                      </div>
                    </div>
                  </div>

                  <div class="flex flex-col gap-3 pt-2">
                    <input type="file" id="plant-image" accept="image/*" class="hidden" />
                    <button type="button" id="btn-upload-image" 
                            class="relative group px-4 py-2.5 rounded-lg transition-all duration-300 overflow-hidden">
                      <div class="absolute inset-0 bg-gradient-to-r from-sky-600 to-emerald-500 transition-opacity group-hover:opacity-90"></div>
                      <div class="relative flex items-center gap-2 text-white">
                        <svg class="w-5 h-5 transition-transform duration-300 group-hover:scale-110" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16v1a3 3 0 003 3h10a3 3 0 003-3v-1m-4-8l-4-4m0 0L8 8m4-4v12" />
                        </svg>
                        <span class="font-medium">Choose Image</span>
                      </div>
                    </button>

                    <button type="button" id="btn-remove-image" 
                            class="hidden relative group px-4 py-2.5 rounded-lg transition-all duration-300 overflow-hidden">
                      <div class="absolute inset-0 bg-gradient-to-r from-red-500/10 to-red-600/10 group-hover:from-red-500/20 group-hover:to-red-600/20 transition-opacity"></div>
                      <div class="relative flex items-center gap-2 text-red-400 group-hover:text-red-300">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                        </svg>
                        <span class="font-medium">Remove Image</span>
                      </div>
                    </button>
                  </div>
                </div>
              </div>

              <!-- Form Grid Layout -->
              <div class="grid grid-cols-2 gap-6">
                <div class="space-y-6">
                  <!-- Plant Name -->
                  <div class="relative group">
                    <label class="block text-sm font-medium mb-2 text-gray-300">Plant Name</label>
                    <input id="plant-name" type="text" required
                           class="w-full bg-gray-900/50 border border-white/10 rounded-lg px-4 py-2.5 text-white placeholder-gray-500
                                  focus:border-sky-500/50 focus:ring-1 focus:ring-sky-500/50 transition duration-300
                                  group-hover:border-white/20" />
                  </div>

                  <!-- Operation Mode -->
                  <div class="relative group">
                    <label class="block text-sm font-medium mb-2 text-gray-300">Operation Mode</label>
                    <select id="plant-mode"
                            class="w-full bg-gray-900/50 border border-white/10 rounded-lg px-4 py-2.5 text-white
                                   focus:border-sky-500/50 focus:ring-1 focus:ring-sky-500/50 transition duration-300
                                   group-hover:border-white/20">
                      <option value="manual">Manual Operation</option>
                      <option value="automatic">Automatic Operation</option>
                      <option value="scheduled">Scheduled Operation</option>
                    </select>
                  </div>
                </div>

                <div class="space-y-6">
                  <!-- Status -->
                  <div class="relative group">
                    <label class="block text-sm font-medium mb-2 text-gray-300">Current Status</label>
                    <select id="plant-status"
                            class="w-full bg-gray-900/50 border border-white/10 rounded-lg px-4 py-2.5 text-white
                                   focus:border-sky-500/50 focus:ring-1 focus:ring-sky-500/50 transition duration-300
                                   group-hover:border-white/20">
                      <option value="Unknown">Unknown</option>
                      <option value="Healthy">Healthy</option>
                      <option value="Needs attention">Needs Attention</option>
                    </select>
