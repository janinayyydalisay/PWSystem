                  <!-- Description -->
                  <div class="relative group">
                    <label class="block text-sm font-medium mb-2 text-gray-300">Description</label>
                    <textarea id="plant-description" rows="3"
                              class="w-full bg-gray-900/50 border border-white/10 rounded-lg px-4 py-2.5 text-white placeholder-gray-500
                                     focus:border-sky-500/50 focus:ring-1 focus:ring-sky-500/50 transition duration-300
                                     group-hover:border-white/20"></textarea>
                  </div>
                </div>
              </div>

              <!-- Form Actions - Fixed at bottom -->
              <div class="sticky bottom-0 left-0 right-0 bg-gray-900/95 backdrop-blur-sm border-t border-white/10 p-4 mt-4">
                <div class="flex justify-end gap-4">
                  <button type="button" id="btn-cancel" 
                          class="px-6 py-2.5 rounded-lg border border-white/10 text-gray-300 hover:bg-white/5 hover:border-white/20 
                                 transition duration-300 focus:outline-none focus:ring-2 focus:ring-white/10">
                    Cancel
                  </button>
                  <button type="submit" id="btn-save"
                          class="relative group px-6 py-2.5 rounded-lg transition-all duration-300 overflow-hidden focus:outline-none focus:ring-2 focus:ring-sky-500/50">
                    <div class="absolute inset-0 bg-gradient-to-r from-sky-600 to-emerald-500 transition-opacity group-hover:opacity-90"></div>
                    <span class="relative font-medium text-white">Save Changes</span>
                  </button>
