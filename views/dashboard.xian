            <!-- Modal header with modern styling -->
            <div class="sticky top-0 z-10">
              <div class="relative border-b border-white/10">
                <!-- Header gradient background -->
                <div class="absolute inset-0">
                  <div class="absolute inset-0 bg-gradient-to-r from-sky-500/10 via-emerald-500/10 to-sky-500/10"></div>
                  <div class="absolute inset-0 backdrop-blur-sm"></div>
                </div>
                
                <!-- Header content -->
                <div class="relative flex items-center justify-between p-6">
                  <h2 id="modal-title" class="flex items-center gap-5">
                    <div class="relative group">
                      <div class="absolute -inset-1 bg-gradient-to-r from-sky-500 to-emerald-500 rounded-xl blur-lg opacity-40 group-hover:opacity-60 transition duration-300"></div>
                      <div class="relative w-14 h-14 rounded-xl bg-gradient-to-br from-sky-500 to-emerald-400 p-3 shadow-lg ring-1 ring-white/20 transition-shadow duration-300 group-hover:shadow-sky-500/25">
                        <svg class="w-full h-full text-white drop-shadow-lg transition-transform duration-300 group-hover:scale-110" viewBox="0 0 24 24" fill="none">
                          <path d="M12 6v12M12 6c0 0 3 4 3 6M12 6c0 0-3 4-3 6" stroke="currentColor" stroke-width="2" stroke-linecap="round"/>
                        </svg>
                      </div>
                    </div>
                    <div class="flex flex-col">
                      <span class="text-sm font-medium text-sky-400/90 tracking-wide">Plant Management</span>
                      <span class="text-white text-xl font-semibold tracking-tight">Plant Details</span>
                    </div>
